<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayer.SinglePlayerResultActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSinglePlayerHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/transparent">

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singlePlayerResultsTextViewHeader"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewSinglePlayerHome"
        app:layout_constraintEnd_toEndOf="@+id/cardViewSinglePlayerResults1"
        app:layout_constraintStart_toStartOf="@+id/cardViewSinglePlayerResults1"
        app:layout_constraintTop_toTopOf="@+id/cardViewSinglePlayerHome" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSinglePlayerResults1"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1Quote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/singlePlayerResultsUser1TextViewQuote"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1QuotePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1PointsEarned"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/singlePlayerResultsUser1TextViewPointsEarned"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1PointsEarnedPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1AllPoints"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/singlePlayerResultsUser1TextViewAllPoints"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1AllPointsPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1Rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/singlePlayerResultsUser1TextViewRank"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/textViewSinglePlayerResultsUser1RankPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSinglePlayerResultsPlayAgain"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/cardViewSinglePlayerResultsGoHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSinglePlayerResults1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSinglePlayerPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:paddingTop="35dp"
                app:srcCompat="@drawable/refresh_button_inv"/>

            <TextView
                android:id="@+id/textViewSinglePlayerResultsUser1PlayAgain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/singlePlayerResultsUser1TextViewPlayAgain"
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSinglePlayerResultsGoHome"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardViewSinglePlayerResultsPlayAgain"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSinglePlayerResults1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCatalog"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:paddingTop="35dp"
                app:srcCompat="@drawable/home"/>

            <TextView
                android:id="@+id/textCatalog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/singlePlayerResultsUser1TextViewGoHome"
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

